<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@android:color/white"
    tools:context=".selection_mode.SelectionMode">

    <!-- Titolo migliorato -->
    <TextView
        android:id="@+id/selection_mode_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleziona la modalitÃ "
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/selection_mode_orders_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="48dp"/>

    <!-- Pulsante Ordini migliorato -->
    <Button
        android:id="@+id/selection_mode_orders_button"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Ordini"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="?attr/colorPrimary"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toTopOf="@+id/selection_mode_kitchen_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selection_mode_title"
        android:layout_marginBottom="16dp"/>

    <!-- Pulsante Cucina migliorato -->
    <Button
        android:id="@+id/selection_mode_kitchen_button"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Cucina"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="?attr/colorPrimary"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selection_mode_orders_button" />

</androidx.constraintlayout.widget.ConstraintLayout>
