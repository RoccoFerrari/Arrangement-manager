<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/SelectionMenu_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectAction">

    <Button
        android:id="@+id/NewArrangement_button"
        android:layout_width="409dp"
        android:layout_height="74dp"
        android:text="Add new arrangement"
        app:layout_constraintBottom_toTopOf="@+id/ModifyMenu_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/ModifyMenu_button"
        android:layout_width="409dp"
        android:layout_height="64dp"
        android:text="Modify menu"
        app:layout_constraintBottom_toTopOf="@+id/NewOrder_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NewArrangement_button"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/NewOrder_button"
        android:layout_width="409dp"
        android:layout_height="70dp"
        android:text="New order"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ModifyMenu_button"
        app:layout_constraintVertical_bias="0.5" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="left" />
</androidx.constraintlayout.widget.ConstraintLayout>